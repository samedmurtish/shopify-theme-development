{% stylesheet %}
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.hero-banners {
  position: relative;
  height: 60vh;
  overflow: hidden;
}

.banner-slider {
  position: relative;
  width: 100%;
  height: 100%;
}

.banner-slide {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  transition: opacity 1s ease-in-out;
  display: flex;
  align-items: center;
  justify-content: center;
}

.banner-slide.active {
  opacity: 1;
}

.banner-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.banner-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  animation: imageZoom 20s ease-in-out infinite;
}

@keyframes imageZoom {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.banner-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    45deg,
    rgba(0, 0, 0, 0.4) 0%,
    rgba(0, 0, 0, 0.2) 50%,
    rgba(0, 0, 0, 0.4) 100%
  );
  z-index: 1;
}

.banner-slide[data-bg="mountain"] .banner-background::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(45deg, #1e3c72, #2a5298, #ffffff);
  background-size: 400% 400%;
  animation: mountainFlow 20s ease-in-out infinite;
  z-index: -1;
}

.banner-slide[data-bg="powder"] .banner-background::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #667eea, #764ba2, #f093fb);
  background-size: 400% 400%;
  animation: powderFlow 20s ease-in-out infinite;
  z-index: -1;
}

.banner-slide[data-bg="freestyle"] .banner-background::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, #ff6b6b, #4ecdc4, #45b7d1);
  background-size: 400% 400%;
  animation: freestyleFlow 20s ease-in-out infinite;
  z-index: -1;
}

.banner-slide[data-bg="mountain"] {
  background: linear-gradient(45deg, #1e3c72, #2a5298, #ffffff);
  background-size: 400% 400%;
  animation: mountainFlow 20s ease-in-out infinite;
}

.banner-slide[data-bg="powder"] {
  background: linear-gradient(135deg, #667eea, #764ba2, #f093fb);
  background-size: 400% 400%;
  animation: powderFlow 20s ease-in-out infinite;
}

.banner-slide[data-bg="freestyle"] {
  background: linear-gradient(90deg, #ff6b6b, #4ecdc4, #45b7d1);
  background-size: 400% 400%;
  animation: freestyleFlow 20s ease-in-out infinite;
}

@keyframes mountainFlow {
  0%, 100% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
}

@keyframes powderFlow {
  0%, 100% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
}

@keyframes freestyleFlow {
  0%, 100% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
}

.banner-content {
  text-align: center;
  color: white;
  z-index: 2;
  position: relative;
  animation: slideUp 1s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(50px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.banner-title {
  font-size: 4rem;
  font-weight: 900;
  margin-bottom: 1rem;
  text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
  animation: titleGlow 3s ease-in-out infinite alternate;
}

@keyframes titleGlow {
  from { text-shadow: 2px 2px 4px rgba(0,0,0,0.3); }
  to { text-shadow: 2px 2px 20px rgba(255,255,255,0.5); }
}

.banner-subtitle {
  font-size: 1.5rem;
  margin-bottom: 2rem;
  opacity: 0.9;
  animation: fadeInDelay 1s ease-out 0.5s both;
}

@keyframes fadeInDelay {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 0.9; transform: translateY(0); }
}

.banner-button {
  display: inline-block;
  background-color: #2563eb;
  color: white;
  padding: 1rem 2.5rem;
  text-decoration: none;
  border-radius: 50px;
  font-weight: 600;
  font-size: 1.1rem;
  transition: all 0.3s ease;
  box-shadow: 0 8px 25px rgba(0,0,0,0.2);
  animation: buttonBounce 2s ease-in-out infinite;
}

@keyframes buttonBounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-5px); }
}

.banner-button:hover {
  transform: translateY(-3px) scale(1.05);
  box-shadow: 0 12px 35px rgba(0,0,0,0.3);
}

.snow-particles {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 1;
}

.snow-particles::before,
.snow-particles::after {
  content: '';
  position: absolute;
  top: -10px;
  left: 0;
  width: 100%;
  height: 110%;
  background-image: 
    radial-gradient(2px 2px at 20px 30px, white, transparent),
    radial-gradient(2px 2px at 40px 70px, white, transparent),
    radial-gradient(1px 1px at 90px 40px, white, transparent),
    radial-gradient(1px 1px at 130px 80px, white, transparent),
    radial-gradient(2px 2px at 160px 30px, white, transparent);
  background-repeat: repeat;
  background-size: 200px 100px;
  animation: snowfall 10s linear infinite;
}

.snow-particles::after {
  animation-delay: 5s;
  opacity: 0.5;
}

@keyframes snowfall {
  0% { transform: translateY(-100%); }
  100% { transform: translateY(100vh); }
}

.banner-dots {
