  color: #1e293b;
  font-weight: 700;
  margin-bottom: 1rem;
  position: relative;
}

.collection-title::after {
  content: '';
  position: absolute;
  bottom: -8px;
  left: 50%;
  transform: translateX(-50%);
  /* width: 80px;  */
  /* height: 4px; */
  background: linear-gradient(45deg, #ff6b6b, #4ecdc4);
  border-radius: 2px;
}

.collection-description {
  font-size: 1.2rem;
  color: #64748b;
  margin-bottom: 2rem;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
}

.collection-controls {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 2rem;
  margin-bottom: 2rem;
  flex-wrap: wrap;
}

.sort-options {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  background: white;
  padding: 0.75rem 1rem;
  border-radius: 25px;
  box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}

.sort-label {
  font-weight: 600;
  color: #64748b;
  margin-right: 0.5rem;
}

.sort-select {
  background: transparent;
  border: none;
  padding: 0.5rem;
  font-weight: 600;
  color: #334155;
  cursor: pointer;
  outline: none;
}

.sort-select:focus {
  color: #0f172a;
}

.view-options {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  background: white;
  padding: 0.5rem;
  border-radius: 25px;
  box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  display: inline-flex;
}

.view-label {
  font-weight: 600;
  color: #64748b;
  margin-right: 0.5rem;
}

.view-btn {
  background: transparent;
  border: none;
  padding: 0.5rem 1rem;
  border-radius: 20px;
  cursor: pointer;
  font-weight: 600;
  color: #64748b;
  transition: all 0.3s ease;
}

.view-btn.active {
  background: #334155;
  color: white;
  transform: scale(1.05);
}

.view-btn:hover {
  background: #64748b;
  color: white;
  transform: scale(1.05);
}

.products-grid {
  display: grid;
  gap: 2rem;
  transition: all 0.5s ease;
  margin-bottom: 3rem;
  grid-template-columns: repeat(3, 1fr);
}

.products-grid[data-columns="3"] {
  grid-template-columns: repeat(3, 1fr);
}

.products-grid[data-columns="4"] {
  grid-template-columns: repeat(4, 1fr);
}

.products-grid[data-columns="5"] {
  grid-template-columns: repeat(5, 1fr);
}

@media (max-width: 1200px) {
  .products-grid[data-columns="5"] {
    grid-template-columns: repeat(4, 1fr);
  }
}

@media (max-width: 900px) {
  .products-grid[data-columns="4"],
  .products-grid[data-columns="5"] {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media (max-width: 768px) {
  .products-grid,
  .products-grid[data-columns="3"],
  .products-grid[data-columns="4"],
  .products-grid[data-columns="5"] {
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }
}

@media (max-width: 480px) {
  .products-grid,
  .products-grid[data-columns="3"],
  .products-grid[data-columns="4"],
  .products-grid[data-columns="5"] {
    grid-template-columns: 1fr;
    gap: 1rem;
  }
}

