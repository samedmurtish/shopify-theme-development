  border-radius: 15px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0,0,0,0.08);
  transition: all 0.4s ease;
  position: relative;
  animation: cardSlideUp 0.6s ease-out forwards;
  opacity: 0;
  transform: translateY(30px);
}

