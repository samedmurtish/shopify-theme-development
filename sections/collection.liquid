<section class="collection-page">
  <div class="ml-4 mb-4">
    {% render 'breadcrumb-nav' %}
  </div>
  <div class="section-container">
    <div class="collection-header">
      <h1 class="h-full text-5xl mb-6 collection-title-hero">{{ collection.title }}</h1>
      {% if collection.description != blank %}
        <p class="collection-description">{{ collection.description }}</p>
      {% endif %}
      <div class="collection-controls">
        <div class="sort-options">
          <label for="sort-select" class="sort-label">Sort by:</label>
          <select id="sort-select" class="sort-select">
            <option value="manual">Featured</option>
            <option value="best-selling">Best Selling</option>
            <option value="title-ascending">Alphabetically, A-Z</option>
            <option value="title-descending">Alphabetically, Z-A</option>
            <option value="price-ascending">Price, low to high</option>
            <option value="price-descending">Price, high to low</option>
            <option value="created-ascending">Date, old to new</option>
            <option value="created-descending">Date, new to old</option>
          </select>
        </div>
        <div class="view-options">
          <span class="view-label">View:</span>
          <button class="view-btn active" data-columns="3">3</button>
          <button class="view-btn" data-columns="4">4</button>
          <button class="view-btn" data-columns="5">5</button>
        </div>
      </div>
    </div>

    {% paginate collection.products by 24 %}
      <div class="products-grid" data-columns="3">
        {% for product in collection.products %}
          <div class="product-card" style="animation-delay: {{ forloop.index | times: 0.1 }}s">
            <div class="product-badge">
              {% if product.compare_at_price > product.price %}
                <span class="sale-badge">Sale</span>
              {% endif %}
              {% if product.tags contains 'featured' %}
                <span class="featured-badge">Featured</span>
              {% endif %}
            </div>
            
            <div class="product-image">
              {% if product.featured_image %}
                <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title }}" width="400" height="400">
              {% else %}
                <div class="product-placeholder">
                  <div class="placeholder-content">
                    <span class="placeholder-icon">ðŸ“¦</span>
                    <span class="placeholder-text">Product Image</span>
                  </div>
                </div>
              {% endif %}
              <div class="product-overlay">
                <a href="{{ product.url }}" class="quick-view">Quick View</a>
              </div>
            </div>
            
            <div class="product-info">
              <div class="product-category">{{ product.type | default: "Snowboard" }}</div>
              <h3 class="text-xl">{{ product.title }}</h3>
              <div class="product-rating">
                <div class="stars">â˜…â˜…â˜…â˜…â˜…</div>
                <span class="rating-count">({{ forloop.index | plus: 15 }})</span>
              </div>
              <div class="product-price">
                {% if product.compare_at_price > product.price %}
                  <span class="sale-price">{{ product.price | money }}</span>
                  <span class="original-price">{{ product.compare_at_price | money }}</span>
                {% else %}
                  <span class="current-price">{{ product.price | money }}</span>
                {% endif %}
              </div>
            </div>
          </div>
        {% else %}
          <div class="empty-collection">
            <div class="empty-icon">ðŸ›¹</div>
            <h3>No products found</h3>
            <p>This collection is empty. Check back later for new arrivals!</p>
          </div>
        {% endfor %}
      </div>

      {% if paginate.pages > 1 %}
        <nav class="pagination" role="navigation" aria-label="Collection pagination">
          {{ paginate | default_pagination }}
        </nav>
      {% endif %}
    {% endpaginate %}
  </div>
</section>

{% stylesheet %}
.collection-title-hero {
  color: #1e293b;
}

.collection-page {
  padding: 4rem 0;
}

.section-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
}

.collection-header {
  text-align: center;
  margin-bottom: 3rem;
}

.collection-title {
